<div class="container">
  <div>
    <img src="assets/images/burgerSq.png" class="burgImgMain rounded-circle" alt="burger" height="200" width="250">
    <h1>Eat that burger!</h1>
  </div>
  <div class="row">
    <div class="col-sm-6">
      <div id="toEat">
        <h2 class="colHead">Ready to Eat!</h2>
        {{#each burgers}} {{#unless eaten}}

        <p>{{ name }} <button class="change-eaten" data-id="{{id}}" data-neweaten="{{eaten}}">
		          {{#if eaten}}{{else}}EAT!{{/if}}
	           </button></p>
        {{/unless}} {{/each}}

      </div>
    </div>


    <div class="col-sm-6">
      <div id="eaten">
        <h2 class="colHead">All Done!</h2>

        {{#each burgers}} {{#if eaten}}

        <p>{{ name }}</p>
        {{/if}} {{/each}}

      </div>
    </div>

  </div>


  <div id="addBurgerDiv">
    <h2 class="colHead">Add a Burger</h2>
    <form class="create-form">
      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
      </div>
      <button type="submit" class="colHead">Add Burger</button>
    </form>
  </div>


</div>